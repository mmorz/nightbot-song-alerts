{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "jsx": "react",
    "allowJs": true,
    // "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*"
  ]
}
